<script>
  if(!sessionStorage.getItem('logout')){
    window.location.href = '/users/login';
  }
</script>
<h1 class="mt-4">Dashboard</h1>

<div>
    <a href="/users/logout" class="btn btn-primary" id="logout">Logout</a>
</div>
<br>
<div>
  <a href="/dashboard/add" class="btn btn-primary">ADD</a>
</div>

<br>
<br>
<div>
    <table class="table table-hover">
        <thead>
          <tr class="table-info">
            
            <th scope="col">Employee_FirstName</th>
            <th scope="col">Employee_LastName</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
            
          </tr>
        </thead>
        <tbody>
            
            <% details.forEach(details => { %>
                 
                <tr class="table-light">
                    
                    <td><%= details.first_name %> </td>
                    <td><%= details.last_name %> </td>
                    <td><%= details.email %> </td>
                    <td><a class="btn btn-primary" href="/dashboard/<%= details.id %> ">Edit</a></td>
                   
                  </tr>
                  
                  
            <% }) %> 
          
          
        </tbody>
      </table>
</div>
<script>
  $('#logout').click((e) => {
    sessionStorage.removeItem('logout');
  })
</script>



